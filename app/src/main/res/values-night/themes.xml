<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_purple_dark</item>
        <item name="colorOnPrimary">@color/text_on_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/text_on_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <!-- Card colors -->
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardForegroundColor">@color/text_primary</item>
        <!-- Button colors -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <!-- Progress bar colors -->
        <item name="progressBarStyle">@style/Widget.App.ProgressBar</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_on_accent</item>
        <item name="rippleColor">@color/button_pressed</item>
    </style>

    <style name="Widget.App.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressTint">@color/progress_primary</item>
        <item name="android:progressBackgroundTint">@color/progress_background</item>
    </style>
</resources> 